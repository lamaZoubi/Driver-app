<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activities.MachineRegistration"
    android:background="@drawable/background">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="337dp"
        android:layout_height="213dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edBusNumber"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:drawableRight="@drawable/ic_baseline_directions_bus_24"
            android:ems="10"
            android:hint="Bus Number"
            android:inputType="number" />

        <EditText
            android:id="@+id/edPaymentAmount"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:drawableRight="@drawable/ic_money"
            android:ems="10"
            android:hint="Payment Amount"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/edPassengerCapacity"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:drawableRight="@drawable/ic_group_24"
            android:ems="10"
            android:hint="Passenger Capacity"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/btRegister"
        android:layout_width="192dp"
        android:layout_height="52dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="70dp"
        android:onClick="register"
        android:text="REGISTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="82dp"
        android:fontFamily="@font/little_student"
        android:gravity="center"
        android:text="Autobice"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/pro1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"


        />
</androidx.constraintlayout.widget.ConstraintLayout>